<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>koa2-blog</title>
	<link rel="icon" href="http://www.wclimb.site/images/avatar.png">
	<link rel="stylesheet" href="/index.css">
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/default.min.css">
	<script src="http://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
	<script>
		function fade(data){
			if ($(data).css('display') !== 'none') {
           		$(data).fadeOut(1500)
       		}
       		else{
       			$(data).show()
           		$(data).fadeOut(1500)
       		}
		}
		$(function(){
			$('.signout').click(()=>{
				$.ajax({
					url: "/signout",
					type: "GET",
					cache: false,
					dataType: 'json',
					success: function (msg) {
						if (msg) {
							$('.success').text('登出成功')
							fade('.success')
							setTimeout(()=>{
								window.location.href = "/posts"
							},1000)	
						}
					},
					error: function () {
						alert('异常');
					}
				})
			})
		})
	</script>
</head>
<body>
	<header>
		<div class="user_name">
			
			<% if(session.user){ %>
				 hello,<%- session.user %>
			<% } %>
			<% if(!session.user){ %>
				欢迎注册登录^_^
			<% } %>
		</div>
		<div class="message">
			<div class="error"></div>
			<div class="success"></div>
		</div>
		<div class="user_right">
			<%  if(session.user){ %>
				<div class="has_user">
					<a target="__blank" href="https://github.com/wclimb/Koa2-blog">GitHub</a>
					<a href="/posts">全部文章</a>
					<a href="/posts?author=<%- session.user %>">我的文章</a>
					<a href="/create">发表文章</a>
					<span class="signout">登出</span>
				</div>
			<% } %>
			<% if(!session.user){ %>
				<div class="none_user">
					<a target="__blank" href="https://github.com/wclimb/Koa2-blog">GitHub</a>
					<a href="/posts">全部文章</a>
					<a  href="/signup">注册</a>
					<a href="/signin">登录</a>
				</div>
			<% } %>
		</div>
	</header>