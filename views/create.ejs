    $('.submit').click(function(){

        // console.log($('.form').serialize());

        if ($('input[name=title]').val().trim() == '') {
            fade('请输入标题')
        }else if ($('textarea').val().trim() == '') {
            fade('请输入内容')
        }else{          
            $.ajax({
                url: "/create",
                // data: $('.form').serialize(),
                data:{
                    title:$('input[name=title]').val(),
                    content:marked($("#editor").val()),
                    md:$("#editor").val()
                },
                type: "POST",
                cache: false,
                dataType: 'json',
                success: function (msg) {
                    if (msg.code == 200) {
                        fade('发表成功')
                        setTimeout(function(){
                            location.href = "/posts"
                        },1000)
                    }else{
                        fade('发表失败')
                    }
                },
                error: function () {
                    alert('异常');
                }
            })          
        }   
    })
</script>